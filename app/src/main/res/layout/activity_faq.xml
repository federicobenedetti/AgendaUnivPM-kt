<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_title"
            android:textSize="@dimen/text_big"
            android:layout_marginBottom="@dimen/margin_medium"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_1_label}"
                    bind:faqDescription="@{@string/faq_1_description}"></include>

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_2_label}"
                    bind:faqDescription="@{@string/faq_2_description}"></include>

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_3_label}"
                    bind:faqDescription="@{@string/faq_3_description}"></include>

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_4_label}"
                    bind:faqDescription="@{@string/faq_4_description}"></include>

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_5_label}"
                    bind:faqDescription="@{@string/faq_5_description}"></include>

                <include
                    layout="@layout/layout_card_faq"
                    bind:faqTitle="@{@string/faq_6_label}"
                    bind:faqDescription="@{@string/faq_6_description}"></include>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>
